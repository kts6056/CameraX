<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CameraX" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="actionBarStyle">@style/Theme.CameraX.AppBarOverlay</item>
    </style>

    <style name="Theme.CameraX.AppBarOverlay" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>
</resources>